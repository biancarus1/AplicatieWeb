            </div>
            <div class="form-group">
                <label asp-for="Appointment.Telefon" class="control-label"></label>
                <input asp-for="Appointment.Telefon" class="form-control" />
                <span asp-validation-for="Appointment.Telefon" class="text-danger"></span>
            </div>
            <label asp-for="Appointment.HairstylistID" class="control-label">Id Hairstylist</label>
